{
  "name": "hatch-os",
  "version": "1.0.0",
  "description": "Hatch OS - Lightweight, secure, customizable operating system by Zylon Labs",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "start-backend": "node src/backend/server.js",
    "start-frontend": "react-scripts start",
    "build": "react-scripts build",
    "build-system": "node scripts/build-system.js",
    "install-os": "sudo node scripts/install-os.js",
    "test": "jest"
  },
  "keywords": ["os", "education", "security", "zylon-labs"],
  "author": "Zylon Labs",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "electron": "^23.1.0",
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^3.0.2",
    "qrcode": "^1.5.1",
    "speakeasy": "^2.0.0",
    "ws": "^8.13.0",
    "sqlite3": "^5.1.6",
    "fs-extra": "^11.1.0",
    "systeminformation": "^5.17.12",
    "node-rfid": "^1.0.0"
  },
  "devDependencies": {
    "react-scripts": "^5.0.1",
    "concurrently": "^7.6.0",
    "jest": "^29.5.0",
    "electron-builder": "^23.6.0"
  },
  "homepage": "./",
  "build": {
    "appId": "com.zylonlabs.hatch-os",
    "productName": "Hatch OS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/backend/**/*",
      "system/**/*",
      "config/**/*"
    ]
  }
}